<%= simple_form_for(@firm) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :name, label: "Nama Bisnis" %>
  </div>
  <div class="field">
    <%= f.input :city, label: "Kota" %>
  </div>
  <div class="field">
    <%= f.input :address, label: "Alamat" %>
  </div>
  <div class="field">
    <%= f.input :phone, label: "Nomor Telepon Kantor" %>
  </div>


  <div class="actions">
    <%= f.button :submit, "Daftarkan", class: "btn btn-block btn-primary", data: {disable_with: "Mendaftarkan bisnis...."} %>
  </div>
<% end %>
