<% title("Home | #{@firm.name}") %>

<% @firm.venues.each do |venue| %>
  <div class="panel report panel-primary">
    <div class="panel-heading clickable">
      <h5 class="panel-title">
          <%= venue.name %> - <%= venue.all_reservations %>
      <span class="badge"><i class="fa fa-chevron-down"></i></span>                        
      </h5>
      <span class="pull-right badge"id="report">
        
      </span>
    </div>
    <div class="panel-body">
      <%= render partial: 'venue_card', locals: { collection: Reservation.by_venue(venue).upcoming.group_by { |r| r.date_reserved }, venue: venue } %>
    </div>
  </div>
<% end %>
