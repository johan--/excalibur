<div class="v-card">
	<!-- Header -->
	<header>
		<ul class="list-inline">
			<li class="active"><a href="#qualification" data-toggle="tab">Ringkasan</a></li>
			<li class=""><a href="#home" data-toggle="tab">Terkonfirmasi</a></li>
			<li class=""><a href="#waiting" data-toggle="tab">Menunggu Konfirmasi</a></li>
			<li class=""><a href="#pending" data-toggle="tab">Daftar Tunggu</a></li>
		</ul>
	</header>
	<!-- tab Content -->
	<div class="tab-content">

		<!-- Tab Pane - Home -->
		<div class="tab-pane fade" id="home">
			<%= render partial: 'elements/booking_calendar', locals: { collection: @confirmed } %>       
		</div>
		<div class="tab-pane fade" id="waiting">
			<%= render partial: 'elements/booking_calendar', locals: { collection: @waiting } %>       
		</div>		
		<div class="tab-pane fade" id="pending">
			<%= render partial: 'elements/booking_calendar', locals: { collection: @pending } %>       
		</div>

		<!-- Tab Pane - Education & Experience -->
		<div class="tab-pane active in" id="qualification">
			<div class="education">
				<h4><i class="fa fa-folder color"></i> Reservasi</h4>
				<hr>
				<div class="row">
					<div class="col-md-6 col-sm-12">
						<div class="education-item">
							<!-- Eudcation detail and year -->
							<h4>
								<span class="badge"><%= Reservation.by_venue(venue).upcoming.count %></span> Reservasi Tercatat 
							</h4>

							<h5>
								Terkonfirmasi 
								<span class="label label-primary"><%= @confirmed.count %></span>
							</h5>
							<h5>
								Menunggu Konfirmasi
								<span class="label label-primary" id="paid"><%= @waiting.count %></span>
							</h5>							
							<h5>
								Daftar Tunggu
								<span class="label label-primary"><%= @pending.count %></span>
							</h5>
						</div>
						<hr>
					</div>
									
				</div>
			</div>

		</div>
	</div>
	
</div>  