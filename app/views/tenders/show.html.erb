<% meta title: "Proposal #{@tender.ticker}" %>


<div class="col-md-4">
  <div class="container">
    <div class="row">
      <ul class="thumbnails list-unstyled">
        <%= render @tender %>
      </ul>
    </div>
  </div>
</div>

<div class="col-md-8">
  <!-- Nav tabs -->
  <div class="material-card">
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Inti</a></li>
          <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Komunikasi</a></li>
          <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Progress</a></li>
        </ul>

  <!-- Tab panes -->
  <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="home">
        <div class="item">
          <h4 class="grey">Pengajuan</h4>
          <%= render partial: 'tender_infos', locals: { tender: @tender } %>
        </div>
        <div class="spacing"></div>
        <div class="item">
          <h4 class="grey">Klien</h4>
          <%= render  partial: 'users/user_infos', locals: { user: @client } %>
        </div>
        <div class="item">
          <h4 class="grey">Properti</h4>
          <%= render 'houses/house_details', house: @tender.tenderable.house %>
        </div>
      </div>
      <div role="tabpanel" class="tab-pane" id="profile">
        <div class="side-view" id="forum" style="display: none;">
        </div>
      </div>
      <div role="tabpanel" class="tab-pane" id="messages">
        <div class="item">
          <h4 class="grey"><%= @bids.count %> Penawaran diterima</h4>
          <%= render partial: 'bids/bid', collection: @bids  %>
        </div>
      </div>
  </div>
</div>  
</div>
