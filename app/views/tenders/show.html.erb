<% meta title: "Proposal #{@tender.ticker}" %>

<%= render partial: 'elements/modal_placeholder', locals: { modal_name: "tender" } %>

<div class="portlet portlet-bordered">
	<div class="portlet-title tab-row">
	    <ul class="nav nav-tabs" role="tablist">
	        <li role="presentation" class="active"><a href="#portlet_tab1" aria-controls="home" role="tab" data-toggle="tab">Front</a></li>
	        <li role="presentation"><a href="#portlet_tab2" aria-controls="profile" role="tab" data-toggle="tab">Forum</a></li>
	        <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
	    </ul>	
	</div>
	
	<div class="portlet-body">
		<div class="tab-content">
			<div class="tab-pane active" id="portlet_tab1">
				<div class="row">

					<div class="col-xs-12">
						<%= render partial: 'tenders/tender_infos',  locals: {tender: @tender} %>
					</div>
					<div class="col-xs-12">
						<h3>Rincian Rumah <small><%= link_to "Telusuri", house_path(@tender.tenderable) %></small></h3>
						<%= render 'houses/house_details', house: @tender.tenderable.house %>
					</div>					
	        <div class="col-xs-12">
	        	<h3>Klien</h3>
        		<div class="col-md-4 col-sm-6 col-xs-12" id="tender-target">
			      	<ul class="user-profiles-list-basic">
			      		<%= render  partial: 'users/user', locals: { user: @client } %>
			      	</ul>
			      </div>
			      <div class="col-md-8 col-sm-6 col-xs-12" id="assessment">
			      	<%= render  partial: 'users/user_infos', locals: { user: @client } %>
			      </div>
			      <div class="col-md-12">		      	
			      </div>
					</div>

					<div class="col-xs-12">
						<h3>Pendana</h3>
						<%= render 'users/users', users: @bidders %>
					</div>

				</div>			    
			</div>

			<div class="tab-pane" id="portlet_tab2">
	      	  <div class="col-xs-12" id="assessment">
	      	  <!-- Comments -->
	      	    <% if @client.comment_threads.count == 0 && current_user.admin? %>
				  <div class="blankslate" id="comment-placeholder">
					<div class="spacious">
						<h3><%= "Belum Ada Analisis" %></h3>
						<p><%= link_to "Buat Analisis", new_comment_path(com_type: 'User', com_id: @client.id, subj: "assessment"), remote: true, class: "btn btn-primary btn btn-round-xs" %></p>
					</div>
				  </div>
			    <% end %>	      	
	      		<%= render @comments %>
				<%= render 'comments/form' %>
			  </div>
			</div>

		</div>
	</div>

</div>