<% meta title: "Proposal #{@tender.ticker}" %>

<%= render partial: 'elements/modal_placeholder', locals: { modal_name: "tender" } %>

<div class="portlet portlet-bordered">
	<div class="portlet-title tab-row">
		<div class="caption caption-red">
			<i class="fa fa-file-text"></i> 
			<span class="caption-subject bold font-yellow-crusta uppercase"><strong><%= "Proposal" %></strong></span>
			<span class="caption-helper"><%=  %></span>
		</div>
		<ul class="nav nav-tabs top-menu">
			<li class="active">
				<a href="#portlet_tab1" data-toggle="tab">
					<i class="fa fa-lg fa-info"></i>
				</a>
			</li>
			<li>
				<a href="#portlet_tab2" data-toggle="tab">
					<i class="fa fa-lg fa-inbox"></i>
					<span class="badge"><%= @bids.count %></span>
				</a>
			</li>
		</ul>
	</div>
	
	<div class="portlet-body">
		<div class="tab-content">
			<div class="tab-pane active" id="portlet_tab1">
				<div class="row">

					<div class="col-xs-12">
						<%= render partial: 'tenders/tender_infos',  locals: {tender: @tender} %>
					</div>
					<div class="col-xs-12">
						<h3>Rincian Rumah <small><%= link_to "Telusuri", house_path(@tender.house) %></small></h3>
						<%= render 'houses/house_details', house: @tender.house %>
					</div>					
	        <div class="col-xs-12">
	        	<h3>Klien</h3>
        		<div class="col-md-4 col-sm-6 col-xs-12" id="tender-target">
			      	<ul class="user-profiles-list-basic">
			      		<%= render  partial: 'users/user', locals: { user: @client } %>
			      	</ul>
			      </div>
			      <div class="col-md-8 col-sm-6 col-xs-12" id="assessment">
			      	<%= render  partial: 'users/user_infos', locals: { user: @client } %>
			      	<% if @client.comment_threads.count == 0 %>
								<div class="blankslate" id="comment-placeholder">
									<div class="spacious">
										<h3><%= "Belum Ada Komentar" %></h3>
										<p><%= link_to "Buat Analisis", new_comment_path(com_type: 'User', com_id: @client.id, subj: "assessment"), remote: true, class: "btn btn-primary btn btn-round-xs" %></p>
									</div>
								</div>
							<% end %>
			      </div>
					</div>

					<div class="col-xs-12">
						<h3>Pendana</h3>
						<%= render 'users/users', users: @bidders %>
					</div>

				</div>			    
			</div>

			<div class="tab-pane" id="portlet_tab2">
	      <div class="col-xs-12" id="assessment">
	      	<!-- Comments -->
	      	<%= render 'comments/comment', comment: @client.comment_threads.first unless @client.comment_threads.count == 0 %>
					<%= render 'comments/form' %>
				</div>
			</div>

		</div>
	</div>

</div>