<div class="panel-body inf-content">
  <div class="row">
  	<div class="col-md-2">
    </div>
    <div class="col-md-3 text-center">
      <h4>Penawaran</h4> 
      <i class="fa fa-file-text fa-4x" style="display: block;"></i>
      <h4 id="identifier">#<%= tender.ticker %></h4>
      <h5><span class="label label-primary" id="tender-state"><%=tender.state %></span></h5> 
      <% if tender.access_granted?(current_user) %>
        <%= link_to 'Edit', edit_tender_path(tender), class: "btn btn-round-lg btn-info", remote: true  %>
      <% else %>
        <%= link_to 'Danai', new_tender_bid_path(tender), class: "btn btn-block btn-round-lg btn-primary", remote: true  %>
      <% end %>
      <br>
    </div>
    <div class="col-md-5">
      <div class="table-responsive">
        <table class="table table-condensed table-responsive table-user-information">
          <tbody>
            <tr>        
              <td><strong>
                <span id="aqad" class="glyphicon glyphicon-briefcase text-primary"></span> Akad
                </strong>
              </td>
              <td class="text-primary" id="tender-aqad">
                <strong><%=tender.aqad.titleize %></strong>
              </td>
            </tr>
            <tr>    
              <td>
                <strong>
                  <span class="fa fa-clock-o text-primary"></span> Lama 
                </strong>
              </td>
              <td class="text-primary" id="tender-maturity"><%=tender.annum %> Tahun</td>
            </tr>
            <tr>    
              <td>
                <strong>
                  <span class="fa fa-money text-primary"></span> Harga
                </strong>
              </td>
              <td class="text-primary" id="price-share"><%= idr_money(tender.price) %> / unit</td>
            </tr>					            
            <tr>					            
                <td>
                  <strong>
                    <span class="fa fa-cubes text-primary"></span> Sisa/Jumlah
                  </strong>
                </td>
                <td class="text-primary">
                    <span id="shares-left"><%=tender.shares_left %></span>/<%= tender.volume %> unit
                </td>
            </tr>
            <tr>        
              <td>
                <strong>
                  <span class="fa fa-envelope text-primary"></span> Unit
                </strong>
              </td>
              <td class="text-primary">
                <%= tender.unit %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-pencil text-primary"></span> Diperbarui
                </strong>
              </td>
              <td class="text-primary">
                <%= time_ago_in_words(tender.updated_at) %> ago
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="fa fa-building text-primary"></span> Rumah
                </strong>
              </td>
              <td class="text-primary">
                <%= link_to tender.tenderable.house.ticker, house_path(tender.tenderable.house) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>