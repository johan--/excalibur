<%= simple_form_for(@tender) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :category, input_html: { class: 'form-control', value: params[:cat], readonly: true }, label: "Jenis Pembiayaan", required: true %>
	<%= f.input :total, label: "Besaran (Rp)", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ajukan", class: "btn btn-primary" %>
  </div>
<% end %>
