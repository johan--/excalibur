<li>
  <%= tender_timeline_sign(tender) %>

  <div class="timeline-panel">
    <div class="timeline-heading">
      <div class="col-md-6 col-sm-12">
        <h4 class="timeline-title">
          <%= link_to tender.ticker, tender_path(tender) %>
        </h4>
        <p><%= tender.category %></p>
        <p>
          <small class="text-muted"><i class="glyphicon glyphicon-time"></i> using <%= tender.aqad.titleize %> for <%= tender.annum %> years</small>            
        </p>
      </div>
      <div class="col-md-6 col-sm-12">
        <div class="col-sm-6 mt">
          <%= tender.shares_left %> saham tersisa
        </div>
        <div class="col-sm-6 mt">
          <span class="pull-right"><%= idr_money(tender.target) %></span>
        </div>
        <div class="col-sm-12 mt">
          <%= link_to "lihat", tender_path(tender), class: "btn btn-primary btn-round-lg" %>
        </div>        
      </div>
    </div>
  </div>

</li>