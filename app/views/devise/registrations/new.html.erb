<% meta title: "Pendaftaran" %>


  <div class="register-box">
    <div class="register-logo">
      <a href="../../index2.html"><b>Admin</b>LTE</a>
    </div>

    <div class="register-box-body">
      <div class="social-auth-links text-center">
      	<%= render 'elements/omniauth_buttons' %>
      </div><br>
      <p class="text-center">- OR -</p><br>
      <p class="login-box-msg">Register a new membership</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group has-feedback">
        	<%= f.text_field :name, class: "form-control", placeholder: "Nama Lengkap" %>
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Konfirmasi Password" %>
          <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "No. Telp" %>
          <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>          
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
              	<%= f.check_box :understanding %> I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div><!-- /.col -->
          <div class="col-xs-4">
          	<%= f.submit "Daftar", class: "btn btn-primary" %>
          </div><!-- /.col -->
        </div>
      <% end %>

      <%= link_to "I already have a membership", new_user_session_url(subdomain: ''), class: "text-center" %>
    </div><!-- /.form-box -->
  </div><!-- /.register-box -->
