<% meta title: "Pendaftaran" %>


  <div class="register-box">
    <div class="register-logo">
      <a href="/"><b>Kapiten</b></a>
    </div>

    <div class="register-box-body">
      <div class="social-auth-links text-center">
      	<%= render 'elements/omniauth_buttons' %>
      </div><br>
      <p class="text-center">- Atau -</p><br>
      <p class="login-box-msg">Buat Akun Baru di Kapiten</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <%= devise_error_messages! %>
        <div class="form-group has-feedback">
        	<%= f.text_field :name, class: "form-control", placeholder: "Nama Lengkap", required: true %>
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Konfirmasi Password", required: true %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "No. Telp", required: true %>
          <span class="glyphicon glyphicon-ear-phone form-control-feedback"></span>
        </div>          
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
              	<%= f.check_box :understanding, required: true %> I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div><!-- /.col -->
          <div class="col-xs-4">
          	<%= f.submit "Daftar", class: "btn btn-primary" %>
          </div><!-- /.col -->
        </div>
      <% end %>

      <%= link_to "Saya sudah pernah mendaftar", new_user_session_url(subdomain: ''), class: "text-center" %>
    </div><!-- /.form-box -->
  </div><!-- /.register-box -->
