<%= simple_form_for(resource, :as => resource_name,
:url => registration_path(resource_name),
:html => { :role => "form" }) do |f| %>

	<div class="form-group col-lg-12">            
	  <%= devise_error_messages! %>
	</div>

	<div class="form-group col-lg-12">
	<%= f.input :category, collection: user_categories, as: :radio_buttons, label: "Jenis Pengguna", validate: true %>
	</div>

	<div class="form-group col-lg-12">
	<%= f.input :email, validate: true, placeholder: "ini akan digunakan untuk kontak dan login" %>
	</div>

	<div class="form-group col-lg-12">
	<%= f.input :password, class: "form-control", input_html: { maxlength: 20, minlength: 6 }, label: 'Kata Kunci', placeholder: "panjang minimal 8 karakter, huruf, angka, atau campurannya", validate: true %>
	</div>

	<div class="form-group col-lg-12">
	<%= f.input :password_confirmation, class: "form-control", label: 'Konfirmasi Kata Kunci', placeholder: "masukkan kata kunci yang sama untuk memastikan", validate: true %>
	</div>

	<div class="form-group col-lg-12">
	<%= f.input :full_name, label: "Nama Lengkap", class: "form-control", help: "Jika tidak ada nama belakang,", validate: true %>
	</div>

	<%= f.button :submit, "Daftar", class: "btn btn-block btn-primary" %>

<% end %>