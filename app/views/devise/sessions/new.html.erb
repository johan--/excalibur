<% meta title: "Log In Page" %>

<div class="login-box">
  <div class="login-logo">
    <b>Log In</b>
  </div><!-- /.login-logo -->

  <div class="login-box-body">
    <div class="social-auth-links text-center">
      <p class="login-box-msg">menggunakan akun media sosial</p>
      <%= render 'elements/omniauth_buttons', login: true  %>
    </div><!-- /.social-auth-links --><br>

    <p class="text-center">- ATAU -</p><br>

    <p class="login-box-msg">menggunakan akun Kapiten</p>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>
      <div class="form-group has-feedback">
        <%= f.text_field :email, placeholder: "email", class: "form-control", required: true, autofocus: true %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: "form-control", placeholder: "password", required: true %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <%= f.check_box :remember_me %> Remember Me
            </label>
          </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit "Masuk", class: "btn btn-primary" %>
        </div><!-- /.col -->
      </div>
    <% end %>
    <div class="spacing"></div>
    <p class="centered">
      Belum pernah mendaftar? <%= link_to "Klik di sini", new_user_registration_url(subdomain: '') %>
    </p>    
    <%= link_to "Lupa password kamu?", new_user_password_url(subdomain: '') %>

  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
<div class="spacing"></div>