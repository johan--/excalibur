<% meta title: "Masuk" %>

<div class="login-box">
  <div class="login-logo">
    <a href="/"><b>Kapiten</b></a>
  </div><!-- /.login-logo -->
  <div class="row"><%= render 'layouts/messages' %></div>
  <div class="login-box-body">
    <div class="social-auth-links text-center">
      <%= render 'elements/omniauth_buttons', login: true  %>
    </div><!-- /.social-auth-links --><br>

    <p class="text-center">- OR -</p><br>

    <p class="login-box-msg">Sign in to start your session</p>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>
      <div class="form-group has-feedback">
        <%= f.text_field :email, placeholder: "email", class: "form-control", required: true, autofocus: true %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: "form-control", placeholder: "password", required: true %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <%= f.check_box :remember_me %> Remember Me
            </label>
          </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit "Masuk", class: "btn btn-primary" %>
        </div><!-- /.col -->
      </div>
    <% end %>

    <a href="#">I forgot my password</a><br>
    <%= link_to "Buat Akun", new_user_session_url(subdomain: ''), class: "text-center" %>

  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->