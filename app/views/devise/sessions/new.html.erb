<% meta title: "Masuk" %>
    <h3 class="text-center">Masuk</h3>
    <div class="row omb_row-sm-offset-3">

      <div class="col-xs-12 col-sm-6">  

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope fa-1x" style="width: 14px;"></i></span>
          <%= f.text_field :email, placeholder: "email kamu", class: "form-control", required: true %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock fa-1x" style="width: 14px;"></i></span>
            <%= f.password_field :password, class: "form-control", placeholder: "masukkan password kamu, minimal 8 karakter", required: true %>
          </div>
          <br>
          <% if devise_mapping.rememberable? -%>
            <p class="small"  style="margin-bottom: 0px;">*Jangan klik kotak 'Ingat saya' kalau kamu tidak menggunakan perangkat pribadi</p>    
            <%= f.label :remember_me, 'Ingat saya' %>
            <%= f.check_box :remember_me %>   
          <% end -%>
          <br>
          <%= f.submit "Masuk", class: "btn btn-lg btn-block btn btn-outlined btn-theme", data: {disable_with: "Memasuki sesi...."} %>
        <% end %>

        <div class="etc-login-form">
          <%= render "devise/shared/links" %>  
        </div>
        
      </div>
    </div>
       
  