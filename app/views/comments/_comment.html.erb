<li class="left clearfix">
	<span class="chat-img pull-left">
		<!-- <img src="http://bootdey.com/img/Content/user_3.jpg" alt="User Avatar"> -->
          <%= render_avatar_for(comment.user,'') %>
	</span>
	<div class="chat-body clearfix">
		<div class="chat-header">
			<strong class="primary-font"><%= comment.user_name.titleize %></strong>
			<small class="pull-right text-muted"><i class="fa fa-clock-o"></i> <%= time_ago_in_words(comment.created_at) %> ago</small>
		</div>
		<p>
		  <%= comment.body_md.html_safe %>
		</p>
	</div>
</li>