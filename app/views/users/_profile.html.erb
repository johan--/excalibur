<div class="well profile">
  <div class="col-sm-12">
    <div class="col-xs-12 col-sm-6">
      <h2><%= user.name %><small> | <%= link_to "Edit", edit_user_path(user, profile: true), remote: true %></small> </h2>
      <p><strong>Pendidikan Terakhir: </strong>  <%= user.last_education %></p>
      <p><strong>Status Pernikahan: </strong> <%= user.marital_status %> </p>
      <p><strong>Jumlah Tanggungan: </strong> <%= user.number_dependents %> Orang </p>
			<p><strong>Penghasilan Bulanan: </strong> <%= idr_money(user.monthly_income) %> </p>
			<p><strong>Pengeluaran Bulanan: </strong> <%= idr_money(user.monthly_expense) %> </p>
			<p><strong>Pekerjaan: </strong> <%= user.occupation %> </p>
      <p><strong>Pengalaman Kerja: </strong> <br>
            <span class="tags">html5</span> 
            <span class="tags">css3</span>
            <span class="tags">jquery</span>
            <span class="tags">bootstrap3</span>
      </p>
    </div>             
    <div class="col-xs-12 col-sm-6">
      <figure>
        <%= image_tag("box-avatar", alt: "def-avatar", class: "img-circle img-responsive") %>
        <figcaption class="ratings">
            <p>Ratings
            <a href="#">
                <span class="fa fa-star"></span>
            </a>
            <a href="#">
                <span class="fa fa-star"></span>
            </a>
            <a href="#">
                <span class="fa fa-star"></span>
            </a>
            <a href="#">
                <span class="fa fa-star"></span>
            </a>
            <a href="#">
                 <span class="fa fa-star-o"></span>
            </a> 
            </p>
        </figcaption>
      </figure>
      <p><strong>Biografi: </strong><br> <%= user.about %> </p>
      <p><strong>Alamat: </strong> <%= user.address %> </p>
    </div>
  </div>            
  <div class="col-xs-12 divider text-center">
    <div class="col-xs-12 col-sm-4 emphasis">
      <h2><strong> 20,7K </strong></h2>                    
      <p><small>Followers</small></p>
      <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Follow </button>
    </div>
    <div class="col-xs-12 col-sm-4 emphasis">
      <h2><strong>245</strong></h2>                    
      <p><small>Following</small></p>
      <button class="btn btn-info btn-block"><span class="fa fa-user"></span> View Profile </button>
    </div>
    <div class="col-xs-12 col-sm-4 emphasis">
      <h2><strong>43</strong></h2>                    
      <p><small>Snippets</small></p>
      <div class="btn-group dropup btn-block">
        <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options </button>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu text-left" role="menu">
          <li><a href="#"><span class="fa fa-envelope pull-right"></span> Send an email </a></li>
          <li><a href="#"><span class="fa fa-list pull-right"></span> Add or remove from a list  </a></li>
          <li class="divider"></li>
          <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this user for spam</a></li>
          <li class="divider"></li>
          <li><a href="#" class="btn disabled" role="button"> Unfollow </a></li>
        </ul>
      </div>
    </div>
  </div>
</div>                 