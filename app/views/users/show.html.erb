<% meta title: "Profil #{@user.name}" %>

<div class="portlet portlet-bordered">
  <div class="portlet-title">
    <div class="caption caption-red">
      <i class="fa fa-file-text"></i> 
      <span class="caption-subject bold font-yellow-crusta uppercase">
        Profil <%= @user.name %>
      </span>
      <span class="caption-helper"><%=  %></span>
    </div>
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#portlet_tab1" aria-controls="info" role="tab" data-toggle="tab">Biodata</a></li>
      <li role="presentation"><a href="#portlet_tab2" aria-controls="pembiayaan" role="tab" data-toggle="tab">Dokumen</a></li>
    </ul>    
  </div>
  

  <div class="portlet-body">
    <div class="tab-content">
      
      <div role="tabpanel" class="tab-pane active" id="portlet_tab1">
        <div class="row">

          <div class="col-md-12">
			      <%= render partial: 'profile', locals: { user: @user, documents: @documents } %>
          </div>
          <div class="col-md-12">
          </div>                    
          <div class="col-md-12">

          </div>
          <div class="col-md-12 col-sm-12">
          </div>
        </div>  
      </div>

      <div role="tabpanel" class="tab-pane" id="portlet_tab2">
        <div class="row">
          <div class="col-sm-12">
            <% if @documents.present? %>
        		  <% @groups.each do |category, documents| %>
                <h5 class="primary"><%= category.titleize %></h5><hr>
                <div class="row">
                  <div class="col-xs-12">
                    <% docs_per_category(category).each do |doc| %>
                      <span class="label label-primary" style="margin-right: 5px;">
                        <%= doc %>  <%= document_checklist(doc) %>
                      </span>
                    <% end %>
                  </div>
                  <% documents.each do |document| %>
                    <div class="col-xs-6 col-sm-4">
          			      <%= render partial: "documents/document", locals: { document: document, thumbnail: true } %>
                    </div>
                  <% end %>
                </div>
        		  <% end %>
            <% else %>
              <%= render partial: 'elements/blankslate', locals: { heading: "Belum Ada Dokumen", explanation: "Tingkatkan kredibilitas dan kelayakan kamu dengan mengunggah dokumen-dokumen yang relevan terhadap kelayakan kamu sebagai klien", anchor: "Unggah Dokumen", destination: new_document_path } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  
</div>

