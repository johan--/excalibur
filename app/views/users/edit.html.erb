
<%= render 'insides/user_header' %>
<% if params[:upload_document] %>	
	<section class="intro padded bordered-section ">
	  <div class="container">
	    <div class="inner-skeleton">
	      <h2>Unggah Berkas Pendukung</h2>
	      <div class="col-md-8 col-md-offset-2">
					<!-- Nav tabs -->
				  <div class="card">
				    <ul class="nav nav-tabs" role="tablist">
				        <li role="presentation" class="active"><a href="#identity" aria-controls="identity" role="tab" data-toggle="tab">Identitas</a></li>
				        <li role="presentation"><a href="#earning" aria-controls="earning" role="tab" data-toggle="tab">Penghasilan</a></li>
				        <li role="presentation"><a href="#expense" aria-controls="expense" role="tab" data-toggle="tab">Pengeluaran</a></li>
				        <li role="presentation"><a href="#collateral" aria-controls="collateral" role="tab" data-toggle="tab">Kepemilikan</a></li>
				    </ul>
				  </div>

			    <!-- Tab panes -->
			    <div class="tab-content">
			      <div role="tabpanel" class="tab-pane active" id="identity">
			        <%= render partial: 'documents/form', locals: { category: "identitas", types: identity_docs } %>
			      </div>
			      <div role="tabpanel" class="tab-pane" id="earning">
			      	<%= render partial: 'documents/form', locals: { category: "penghasilan", types: earning_docs } %>      	
			      </div>
			      <div role="tabpanel" class="tab-pane" id="expense">
			      	<%= render partial: 'documents/form', locals: { category: "pengeluaran", types: expense_docs } %>      	
			      </div>
			      <div role="tabpanel" class="tab-pane" id="collateral">
			      	<%= render partial: 'documents/form', locals: { category: "kepemilikan", types: collateral_docs } %>      	
			      </div>
			    </div>
	        
	      </div>
	    </div>
	  </div>
	</section>
	<section class="intro padded">
	  <div class="container">
	    <div class="inner-skeleton centered">
	      <% if @documents.present? %>
	        <% @documents.each do |document| %>
	          <div class="col-xs-6 col-sm-4">
	            <%= render partial: "documents/document", locals: { document: document, thumbnail: true } %>
	          </div>
	        <% end %>
	      <% else %>
	        <h5 class="centered">Belum ada Dokumen</h5>
	      <% end %>
		  <p><strong>
		  		<%= link_to "Kembali ke Profil", user_path(current_user) %> |
		  		<%= link_to "Kembali ke Beranda", user_root_path %>
		  	</strong></p>
		  </div>
		</div>
	</section>
<% else %>

  <section class="intro padded no-vertical-padding bordered-section" style="margin-bottom: -30px;">
		<div class="container">
		  <div class="row">
		    <div class="inner-skeleton">
					<div class="col-md-10 col-md-offset-1">
					  <center>
					  	<h3 class="">Pengisian Profil Klien</h3>
					    <%= render 'profile_form' %>
					  </center>
					</div>
		    </div>
		  </div>
		</div>
	</section>

<% end %>