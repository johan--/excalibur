<% title("Admin Dashboard") %>
<h1>Admin <small>Dashboard</small></h1>

  <div class="col-sm-4 col-xs-6">
    <h3>Recent Subscribers</h3>
    <ul class="list-unstyled">
      <% @last_subscribers.each do |subs| %>
      <li class="list-padded-bottom">
        <%= subs.email %><br/>
        <small>
          <%= time_ago_in_words(subs.created_at)%> ago
        </small>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-4 col-xs-6">
    <h3>Last Sign Ups</h3>
    <ul class="list-unstyled">
      <% @last_signups.each do |user| %>
      <li class="list-padded-bottom">
        <%= user.email %><br/>
        <small><%= time_ago_in_words(user.created_at)%> ago</small>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-4 col-xs-6">
    <h3>Last Sign Ins</h3>
    <ul class="list-unstyled">
      <% @last_signins.each do |user| %>
      <li class="list-padded-bottom">
        <%= user.email %><br/>
        <small>
          <% unless user.last_sign_in_at.nil? %>
          <%= time_ago_in_words(user.last_sign_in_at)%> ago
          <% else %>
          never
          <% end %>
        </small>
      </li>
      <% end %>
    </ul>
  </div>
