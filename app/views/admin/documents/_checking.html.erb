<div class="modal-header modal-header-success">
  <h3>Proses Dokumen</h3>
</div>
<div class="modal-body">
  <center>
    <h3 class="media-heading">Cek Dokumen <%= document.ticker %></h3>
  </center>
    <p>Diunggah oleh <strong><%= document.owner.name %></strong>, jenisnya adalah (<%= document.doc_type %>) dengan file public id <strong><%= document.public_id %></strong></p>

<%= form_for([:admin, document]) do |f| %>
  <div class="form_line">
    <%= f.label :checked, "Diterima?" %>
    <div class="form_controls">
      <%= f.select :checked, boolean_options, selected: document.checked %>
    </div>
  </div>
  <div class="form_line">
    <%= f.label :flagged, "Bermasalah?" %>
    <div class="form_controls">
      <%= f.select :flagged, boolean_options, selected: document.flagged %>
    </div>
  </div>
  <div class="form_line">
    <div class="form_controls">
      <%= f.submit "Simpan", class: "btn btn-outlined btn-theme" %>
    </div>
  </div>  
<% end %>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-warning pull-left" data-dismiss="modal">Batalkan</button>
</div>