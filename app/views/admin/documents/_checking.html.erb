<%= form_for([:admin, @document]) do |f| %>
  <div class="form_line">
    <%= f.label :checked, "Diterima?" %>
    <div class="form_controls">
      <%= f.select :checked, boolean_options, selected: @document.checked %>
    </div>
  </div>
  <div class="form_line">
    <%= f.label :flagged, "Bermasalah?" %>
    <div class="form_controls">
      <%= f.select :flagged, boolean_options, selected: @document.flagged %>
    </div>
  </div>
  <div class="form_line">
    <div class="form_controls">
      <%= f.submit "Simpan", class: "btn btn-outlined btn-theme" %>
    </div>
  </div>  
<% end %>