<% meta title: "Tawaran | Admin Dashboard" %>

<h1>Tawaran <small>Admin Dashboard</small></h1>
<p><%= link_to "Back to Admin Root", admin_root_path %></p>

<% if params[:tender_id] %>
  <h4 class="primary">Tawaran Untuk Proposal <%= @tender.barcode %></h4>
<% end %>

<div class="text-center">
  <%= paginate @bids %>
</div>

<table class="table table-striped">
  <tr>
    <th>Proposal</th>
    <th>Penawar</th>
    <th>Updated At</th>
    <th>Lembar</th>
    <th>Rp/lembar</th>
    <th>Status</th>
    <th></th>
  </tr>

  <% @bids.each do |bid| %>

  <tr>
    <td><%= link_to bid.tender.barcode, show_tender_link(bid.tender) %></td>
    <td><%= link_to bid.bidder.name, user_path(bid.bidder) %></td>
    <td><%= time_ago_in_words(bid.updated_at)%> ago</td>
    <td><%= bid.shares %></td>
    <% if Rails.env.test? %>
      <td><%= bid.at_price %></td>
    <% else %>
      <td><%= idr_money(bid.at_price) %></td>
    <% end %>
    <td><%= bid.state %></td>
    <td><%= link_to "Proses", edit_admin_bid_path(bid), remote: true %></td>
  </tr>

  <% end %>

</table>

<div class="text-center">
  <%= paginate @bids %>
</div>
