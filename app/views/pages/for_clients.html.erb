<section class="section" id="client-benefits">
<div class="container">
  <div class="row">
    <div class="col-md-12 benefits">
      <div class="col-md-4 hidden-xs mt">
        <div class="media-box white mt">
          <h1 class="text-center">Manfaat</h1>
        </div>
      </div>
