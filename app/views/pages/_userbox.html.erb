<div class="col-sm-12">
  <div class="weather-3 pn centered">
    <div class="col-sm-3">
      <i class="fa fa-smile-o centerpiece mt"></i>
      <h3>
        PROFIL
        <i class="fa fa-question-circle fa-lg pop-helper" data-container="body" data-toggle="popover" data-placement="top" title="Other Prep" data-content="<%= credibility_popover_text %>" data-original-title=""></i>
      </h3>
    </div>
    <div class="col-sm-9">
      <div class="home-prompt">
        <div class="row">
          <div class="mt col-sm-6 col-xs-12">
            <%= link_to 'Edit', edit_user_path(current_user), class: "btn btn-outlined btn-theme btn-md", :remote => true %>
            <%= link_to 'Lihat', user_path(current_user), class: "btn btn-outlined btn-theme btn-md" %>
          </div>
          <div class="mt col-sm-6 col-xs-12">
          <%= link_to 'Unggah Berkas', new_document_path, class: "btn btn-outlined btn-theme btn-block"  %></div>
        </div>
      </div>
    </div>
  </div>
</div>  
<div class="profile-userpic">
  <% if current_user.avatar.nil? %>
    <%= link_to avatar_user_path(current_user), remote: true do %>
      <%= image_tag('default-avatar', class: "img-responsive") %>
    <% end %>
  <% else %>
    <%= cl_image_tag(current_user.avatar, cloudinary_thumbnail_options ) %>
  <% end %>
</div>
<div class="profile-usertitle">
  <div class="profile-usertitle-name">
    <%= current_user.name %>
  </div>
  <div class="profile-usertitle-job">
    <%= user_authority(current_user) %>
  </div>
</div>
<div class="profile-stats">
  <div class="col-md-4 col-sm-4 col-xs-12 stats-col">
      <div class="stats-value pink"><%= current_user.credibility %></div>
      <div class="stats-title">KREDIBILITAS</div>
  </div>
  <div class="col-md-4 col-sm-4 col-xs-12 stats-col">
      <div class="stats-value pink"><%= @documents.count %></div>
      <div class="stats-title">DOKUMEN</div>
  </div>
  <div class="col-md-4 col-sm-4 col-xs-12 stats-col">
      <div class="stats-value pink"><%= @documents.verifieds.count %></div>
      <div class="stats-title">TERVERIFIKASI</div>
  </div>  
</div>