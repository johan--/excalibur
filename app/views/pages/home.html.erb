<% title("Beranda") %>

<div class="container">
	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<h3><i class="fa fa-bolt"></i> Halaman Beranda</h3>
		</div>
		
		<div class="col-md-8 col-md-offset-2 col-sm-8">		
			<div id="welcome-box">
				<%= image_tag("box-avatar", alt: "def-avatar") %>
			  <h3 class="head text-center">Hai, <%= current_user.full_name %></h3>
			  <p class="narrow text-center">
			    Berkas <span class="label label-success">1 </span> 
			     Status <span class="label label-info"> Menunggu Konfirmasi</span>
			     Pengajuan <span class="label label-warning"> 1 Pending</span>
			  </p>
		    <div class="status-row" id="">
		    	<%= render 'elements/statuses' %>
		    </div>	
			</div>		
		 </div>
		<div class="col-md-12 col-sm-8">
		  <div class="stylish-panel">
		    <div class="col-md-4 col-sm-12">
		      <div>
		        <i class="fa fa-cab fa-3x"></i>
		        <h3>Kendaraan</h3>
		        <%= link_to "Buat Pengajuan »", new_tender_path(cat: "kendaraan"), class: "btn btn-primary btn-md" %>
		      </div>
		    </div>  
		    <div class="col-md-4 col-sm-12">
		      <div>
		        <i class="fa fa-laptop fa-3x"></i>
		        <h3>Elektronik</h3>
		        <%= link_to "Buat Pengajuan »", new_tender_path(cat: "elektronik"), class: "btn btn-primary btn-md" %>
		      </div>
		    </div>
		    <div class="col-md-4 col-sm-12">
		      <div>
		        <i class="fa fa-mortar-board fa-3x"></i>
		        <h3>Pendidikan</h3>
		        <%= link_to "Buat Pengajuan »", new_tender_path(cat: "pendidikan"), class: "btn btn-primary btn-md" %>
		      </div>
		    </div>  

		  </div>  
		</div>
	</div>

</div>