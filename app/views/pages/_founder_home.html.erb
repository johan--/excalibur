<div class="portlet portlet-bordered">
  <div class="portlet-title">
    <div class="caption caption-red">
      <i class="fa fa-home"></i> 
      <span class="caption-subject bold font-yellow-crusta uppercase">
        <%= "Beranda" %>
      </span>
      <span class="caption-helper"><%=  %></span>
    </div>
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#portlet_tab2" aria-controls="info" role="tab" data-toggle="tab">Info</a></li>
      <li role="presentation"><a href="#portlet_tab3" aria-controls="bantuan" role="tab" data-toggle="tab">Bantuan</a></li>
    </ul>
  </div>
  

  <div class="portlet-body">
    <div class="tab-content">

      <div role="tabpanel" class="tab-pane active" id="portlet_tab2">
        <div class="row">
          <div class="col-md-12">
            <%= render 'pages/userbox' %>
          </div>
          <div class="col-md-12">
            <div class="home-prompt">
              <div class="row">
                <div class="col-xs-6">
                  <%= link_to 'Ajukan Murabahah', new_user_tender_path(current_user, aqad: 'murabahah'), class: "btn btn-outlined btn-theme btn-block", remote: true  %>
                </div>
                <div class="col-xs-6">
                  <%= link_to 'Ajukan Musyarakah', new_user_tender_path(current_user, aqad: 'musyarakah'), class: "btn btn-outlined btn-theme btn-block", remote: true  %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-12 col-sm-12 mt">
            <% if current_user.tenders.empty? %>
              <div class="blankslate">
                <div class="spacious">
                  <h3><%= "Belum Ada Proposal" %></h3>
                </div>
              </div>
            <% else %>
          <div class="widget-box">
            <div class="widget-header bordered-bottom bordered-themesecondary">
              <i class="widget-icon fa fa-tags themesecondary"></i>
              <h5 class="widget-caption themesecondary">Penawaran</h5>
            </div><!--Widget Header-->
            <div class="widget-body">
              <div class="widget-main no-padding">
                <div class="tickets-container">
                  <ul class="tickets-list">
                    <%= render current_user.tenders  %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
            <% end %>
          </div>          
        </div>
      </div>

      <div role="tabpanel" class="tab-pane" id="portlet_tab3">
        
      </div>

    </div>
  </div>

  
</div>