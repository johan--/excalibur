<div class="portlet portlet-bordered">
  <div class="portlet-title">
    <div class="caption caption-red">
      <i class="fa fa-home"></i> 
      <span class="caption-subject bold font-yellow-crusta uppercase">
        <%= "Beranda" %>
      </span>
      <span class="caption-helper"><%=  %></span>
    </div>
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#portlet_tab2" data-toggle="tab">
          Info
        </a>
      </li>    
      <li>
        <a href="#portlet_tab1" data-toggle="tab">
          Pembiayaan
        </a>
      </li>
      <li>
        <a href="#portlet_tab3" data-toggle="tab">
          Bantuan
        </a>
      </li>
    </ul>
  </div>
  

  <div class="portlet-body">
    <div class="tab-content">

      <div class="tab-pane active" id="portlet_tab2">
        <div class="row">
          <div class="col-md-12">
            <%= render 'pages/userbox' %>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="portlet_tab1">
        <div class="row">               
          <div class="col-md-12">
            <div class="weather-3 pn centered">
              <div class="col-md-4">
                <i class="fa fa-bank centerpiece"></i>
                <h3>
                  PEMBIAYAAN
                  <i class="fa fa-question-circle fa-lg pop-helper" data-container="body" data-toggle="popover" data-placement="top" title="Other Prep" data-content="<%= credibility_popover_text %>" data-original-title=""></i>
                </h3>
              </div>
              <div class="col-md-8">
                <div class="home-prompt">
                  <%= link_to 'Buat Proposal', new_user_tender_path(current_user), class: "btn btn-outlined btn-theme mt", :remote => true  %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-12 col-sm-12">
            <%= render current_user.tenders  %>

          </div>
        </div>  
      </div>

      <div class="tab-pane" id="portlet_tab3">
        <%= render 'pages/help' %>
      </div>

    </div>
  </div>

  
</div>