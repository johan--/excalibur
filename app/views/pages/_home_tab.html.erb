<div class="tab-pane fade in active" id="home">
  <div class="container">
    <h1><i class="fa fa-home"></i> Home</h1>  
    
    <h3 class="head text-center">Hai, <%= current_user.email %></h3>
    <p class="narrow text-center">
      <%= current_user.current_reservations.count %> Pesanan Terdaftar
    </p>

    <p class="text-center">
      <%= link_to "Konfirmasi Uang Muka", new_installment_path, class: "btn btn-success btn-outline-rounded green" %>
    </p>  

    <div class="row">
      <div class="col-md-10 col-md-offset-1">
          <div class="panel report panel-success">
            <div class="panel-heading clickable">
              <h5 class="panel-title">
                  Pesanan
              <span class="badge"><i class="fa fa-chevron-down"></i></span>                        
              </h5>
              <span class="pull-right badge"id="report">
                <%= current_user.reservations.count %>   
              </span>
            </div>
            <div class="panel-body reservation">
              <%= render partial: 'reservations/reservations', locals: { collection: current_user.reservations, type: 'user' } %>
            </div>
          </div>
      </div>

      <div class="col-md-10 col-md-offset-1">
          <div class="panel report panel-primary">
            <div class="panel-heading clickable">
              <h5 class="panel-title">
                  Arena Favorit
              <span class="badge"><i class="fa fa-chevron-down"></i></span>        
              </h5>
              <span class="pull-right badge"id="report">
                <%= current_user.favorite_venues.count %> 
              </span>
            </div>
            <div class="panel-body">
              <%= render partial: 'venues/venue', collection: current_user.favorite_venues %>
            </div>
          </div>
        
      </div>
      
    </div>

  </div>
</div>