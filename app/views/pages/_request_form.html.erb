<div class="modal-header modal-header-primary coral-background">
  <h3>Permintaan Pendanaan</h3>
</div>
<div class="modal-body">
  <center>
<div class="row">
  <div class="col-xs-12 col-md-12" id="contact-form">

    <%= form_tag send_request_path, method: 'post', html: {role: "form"} do %>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <%= text_field_tag :name, '', placeholder: "Nama kamu", class: "form-control", required: true %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= text_field_tag :email, '', placeholder: "Email kamu", class: "form-control", required: true %>
        </div>        
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <%= text_field_tag :occupation, '', placeholder: "Pekerjaan", class: "form-control", required: true %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= number_field_tag :capital, '', placeholder: "Modal kamu", class: "form-control", required: true %>
        </div>        
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <%= text_field_tag :tangible, '', placeholder: "Jenis properti", class: "form-control", required: true %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= number_field_tag :price, '', placeholder: "Harga", class: "form-control", required: true %>          
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <%= text_area_tag :address, '', placeholder: "Alamat properti", class: "form-control", required: true %>
        </div>        
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 padded">
        <%= submit_tag t("forms.buttons.submit"), class: 'btn btn-lg btn-success' %>
      </div>
    </div>
    <% end %>

  </div>
</div>

  </center>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-warning pull-left" data-dismiss="modal">Batalkan</button>
</div>