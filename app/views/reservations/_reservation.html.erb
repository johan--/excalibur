<% if defined?(type) && type == 'firm' %>
  <li class="ticket-item">
    <div class="row">
      <div class="ticket-user col-md-4 col-sm-12">
        <span class="user-name"><%= reservation.date_reserved %></span>
        <span class="user-company"><i class="fa fa-clock-o"></i><%= reservation.start %> - <%= reservation.finish %></span>
      </div>
      <div class="ticket-time  col-md-5 col-sm-6 col-xs-12">
        <div class="divider hidden-md hidden-sm hidden-xs"></div>
        <i class="glyphicon glyphicon-pencil"></i>
        <span class="time"><%= time_ago_in_words(reservation.created_at) %> ago by <%= booker.full_name %></span>
      </div>
      <div class="ticket-type  col-md-3 col-sm-6 col-xs-12">
        <span class="divider hidden-xs"></span>
        <span class="type"><%= reservation.court.name %></span>
        <span><%= link_to "Konfirmasi", biz_confirm_path if reservation.waiting? %></span>
      </div>
      <%= reservation_state_sign(reservation) %>
    </div>
  </li>
<% else %>
  <li class="ticket-item">
    <div class="row">
      <div class="ticket-user col-md-4 col-sm-12">
        <span class="user-name"><%= reservation.date_reserved %></span>
        <span class="user-company"><i class="fa fa-clock-o"></i><%= reservation.start %> - <%= reservation.finish %></span>
      </div>
      <div class="ticket-time  col-md-4 col-sm-6 col-xs-12">
        <div class="divider hidden-md hidden-sm hidden-xs"></div>
        <i class="glyphicon glyphicon-pencil"></i>
        <span><%= reservation.court.venue.name %></span>
        <span class="time"><%= reservation.court.name %></span>
      </div>
      <div class="ticket-type  col-md-4 col-sm-6 col-xs-12">
        <span class="divider hidden-xs"></span>
        <span class="type"><%= "Uang Muka" %></span>
        <span><%= idr_money(reservation.down_payment) %></span>
        <span><%= link_to "Bayar", new_installment_path if reservation.pending? %></span>
      </div>
      <%= reservation_state_sign(reservation) %>
    </div>
  </li>
<% end %>