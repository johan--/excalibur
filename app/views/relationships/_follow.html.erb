<%= form_for(current_user.relationships.build(followed_id: followed.id,followed_type: followed.class.name), remote: true) do |f| %>

	<div><%= f.hidden_field :followed_id %></div>
	<div><%= f.hidden_field :followed_type %></div>
	<%= f.button "+ Favorit", class: "btn btn-sm btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Menyimpan arena sebagai favorit...."} %>
<% end %>