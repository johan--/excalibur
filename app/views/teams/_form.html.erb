<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<%= f.input :type, as: :select, Team.types.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @type != "Team" %> 
    <%= f.input :name %>

    <%= f.input :starter_email %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
