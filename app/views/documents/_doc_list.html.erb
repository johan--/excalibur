<div class="col-md-10 col-md-offset-1" id="documents-view">
  <ul class="document-listing" id="bid-list" style="padding-left: 0px;">
    <% if documents.present? %>  
      <% documents.each_with_index do |document, index| %>
        <li class="bid-item">
          <div class="row listing-container">
          <div class="col-md-4 left-detail">
            <div class="s-grid-inner">
              <span class="category"><%= document.category %></span>
            </div>
          </div>
          <div class="col-md-8">
            <div class="s-grid-outer">
              <div class="s-grid-inner">
                <div class="col-xs-8" style="padding-left: 0px;">
                  <span class="doc_type"><%= document.doc_type %></span>
                  <p class="listing-data">Last modified was <%= time_ago_in_words(document.updated_at) %> ago</p>
                </div>
                <div class="col-xs-4 listing-actions float-right">
                  <strong><%= document.state %></strong>
                  <p class="listing-data">Status</p>
                </div>              
              </div>
            </div>
          </div>
          </div>  
        </li>
      <% end %>
    <% else %>
      <li class="centered grey">
        <h4><%= "Belum ada berkas" %></h4>
        <h1><i class="ion ion-compose"></i></h1>
        <p></p>
      </li>
    <% end %>
  </ul>
</div>
