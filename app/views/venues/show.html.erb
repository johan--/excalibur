<% title(@venue.name) %>

<h3 class="head text-center"><%= @venue.name %><%= render partial: 'relationships/follow_form', locals: { followed: @venue } %></h3>    
  <p class="narrow text-center">
    <small><cite title="San Francisco, USA"><i class="glyphicon glyphicon-map-marker"></i><%= @venue.address %></cite></small>
  </p>
  <p class="narrow text-center">
    <span class="label label-info"><%= @venue.province %>, <%= @venue.province %></span> 
    <span class="label label-warning"><%= @venue.courts.count %> Lapangan</span>
  </p>

      <div class="tabbable-panel">
        <div class="tabbable-line">
          <ul class="nav nav-tabs ">
            <li class="active">
              <a href="#tab_default_1" data-toggle="tab">
              Cek Reservasi </a>
            </li>
            <li>
              <a href="#tab_default_2" data-toggle="tab">
              Reservasi 7 Hari Ke Depan </a>
            </li>
            <li>
              <a href="#tab_default_3" data-toggle="tab">
              Info </a>
            </li>
          </ul>
          <div class="tab-content">

            <div class="tab-pane active" id="tab_default_1">
              <div class="row">
                <div class="col-md-4">
                  <p class="lead text-center">
                    Cek Reservasi
                  </p><hr>              
                  <%= render 'reservations/search_form' %>
                </div>
                <div class="col-md-7">
                  <% if search_params_exist? %>
                    <%= render partial: 'reservations/reservation_prompt', locals: { type: 'user' } %>
                  <% end %>
                </div>
              </div>
              
            </div>

            <div class="tab-pane" id="tab_default_2">
              <p class="lead">
                Pemesanan 7 hari ke depan
              </p>

      <div class="panel-group" id="court-accordion" role="tablist" aria-multiselectable="false">
        <% @court_group.each_with_index do |(court, bookings), index| %>
          <div class="panel panel-primary">
            <a data-toggle="collapse" data-parent="#court-accordion" href="#collapse<%= court.id %>" aria-expanded="false" aria-controls="collapse<%= court.id %>">
              <div class="panel-heading" role="tab" id="court-<%= court.id %>">
                <h5 class="panel-title">
                  <%= court.name %>
                <span class="badge"><i class="fa fa-chevron-down"></i></span>                        
                </h5>
                <span class="pull-right badge"id="report">
                  <%= bookings.count %> Pesanan
                </span>
              </div>
            </a>
            <div id="collapse<%= court.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="court-<%= court.id %>">
              <div class="panel-body reservation">
              <%= render partial: 'reservations/reservations', locals: { collection: bookings, type: 'user' } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

            </div>
            <div class="tab-pane" id="tab_default_3">
              <p class="lead">
                Info
              </p>
              <p>
                Belum ada info
              </p>
            </div>
          </div>
        </div>
      </div>