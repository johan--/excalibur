<%= simple_form_for(@bid) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.association :tender, collection: Bid.all, prompt: "Pilih Tender Tertuju", label: "# Tender", required: true %>
	<%= f.input :total, label: "Besaran (Rp)", required: true %>
	<%= f.input :maturity, label: "Jatuh Tempo (bulan)", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
