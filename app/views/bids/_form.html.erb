<%= simple_form_for([@tender, @bid]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :contribution, label: "Besaran (Rp)", required: true %>
	<%= f.input :summary, label: "Rangkuman", required: false %>
  </div>

  <div class="form-actions">
    <%= f.submit "Simpan", class: "btn btn-outlined btn-black" %>
  </div>
<% end %>
