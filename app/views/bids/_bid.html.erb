<div class="msg msg-info" id="<%= bid.barcode %>"> 
	<div class="row">

	<div class="col-sm-6 col-xs-12">
		<span class="fa fa-fax"></span> 
		<span class="barcode">
			<strong><%= bid.barcode %></strong>
		</span>
		<span class="fa fa-thumb-tack"></span> <span class="barcode"><strong><%= bid.tender.barcode %></strong></span>		
	</div>
	<div class="col-sm-2 col-xs-6">
		<span class="label label-success contribution">
			<%= idr_money(bid.contribution) %>
		</span>			
	</div>
	<div class="col-sm-4 col-xs-6">
		<span class="bidder-name">
			<strong><%= bid.bidder.name %></strong>
		</span>		
		<i class="fa fa-arrow-right"></i>
		<span class="tenderable-name">
			<strong><%= bid.tender.tenderable.name %></strong>
		</span>		
	</div>

	</div>
</div>