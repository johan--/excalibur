<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <% metamagic site: ENV["SITE_NAME"], title: [:title, :site], separator: " | " %>
  <% twitter site: ENV["TWTR_HANDLER"] %>  
  <% meta og: { site_name: ENV["SITE_NAME"] } %>
  <%= metamagic %>  
  <%= favicon_link_tag 'newlogo.ico' %>
  <%= favicon_link_tag '//res.cloudinary.com/instilla/image/upload/s--SepQWrvb--/c_scale,w_30/v1452061579/asset/png/Drawing_7.png', rel: 'logo', type: 'image/png' %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= cloudinary_js_config %>
<!--   <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %> -->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
  <%= render 'elements/mixpanel_script' %>
</head>
<% if @inside %>

  <body class="hold-transition skin-blue sidebar-mini">
    <% unless @admin_layout %>  
      <%= render 'layouts/wrapper' %>
    <% else %>
      <%= render 'layouts/admin_layout' %>
    <% end %>
  </body>

<% else %>

  <body>
    <% if @no_layout  %>
      <%= yield %>
    <% elsif @static  %>
      <%= render 'layouts/classic_navbar' if !user_signed_in? %>
      <%= render 'layouts/mobile_navbar' if user_signed_in? %>    
      <%= yield %>      
    <% elsif @blog_layout %>
      <%= render 'layouts/blog_layout' %>    
    <% elsif @wiki_layout %>
      <%= render 'wiki_pages/wiki_layout' %>
    <% elsif @disable_background %>

      <div class="wrap">
        <div class="container" id="outer-container">
          <div class="row" style="margin-top: 50px;">
            <%= render 'layouts/messages' %>
              
              <section class="col-md-12 col-sm-12 col-xs-12" style="padding-top: 10px; padding-bottom: 100px">

                <%= render 'layouts/sidebar_options' unless current_user.nil? %>
                <div class="col-md-10 col-sm-12 white-background" id="main-layout">
                  <%= yield %>
                </div>
              </section>
                
          </div>
        </div>
      </div>

    <% end %>
  </body>

<% end %>

</html>