<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= render_user_thumb(current_user, 'img-circle') %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
    <br>
    <ul class="sidebar-menu">
      <li class="header">Links</li>
      <li class="active">
        <%= link_to user_root_path do %>
          <i class="fa fa-flag"></i> <span>Home</span> <small class="label pull-right bg-green"></small>
        <% end %>
      </li>            
      <li>
        <%= link_to admin_houses_path do %>
          <i class="fa fa-building"></i> <span>Properties</span> <small class="label pull-right bg-green">new</small>
        <% end %>
      </li>      
      <li class="treeview">
        <a href="#">
          <i class="fa fa-table"></i> <span>Business</span>
          <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to "Proposals", admin_tenders_path %></li>
          <li><%= link_to "Bids", admin_bids_path %></li>
        </ul>
      </li>
      <li class="">
        <%= link_to admin_users_path do %>
          <i class="fa fa-dashboard"></i> <span>Users</span>
        <% end %>
      </li>      
      <li>
        <%= link_to admin_posts_path do %>
          <i class="fa fa-newspaper-o"></i> <span>Publications</span> <small class="label pull-right bg-green">new</small>
        <% end %>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>