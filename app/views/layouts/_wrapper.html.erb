<div class="wrapper">

  <%= render 'layouts/header_wrapper' %>
  
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'layouts/sidebar_wrapper' %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

      <!-- Main row -->
      <div class="row">
        <!-- Left col -->
        <section class="col-lg-12 connectedSortable" style="padding-left: 0px; padding-right: 0px;">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </section> <!-- /.Left col -->
        
        <!-- right col (We are only adding the ID to make the widgets sortable)-->
<!--             <section class="col-lg-5 connectedSortable">

        </section>-->
      </div><!-- /.row (main row) -->

    </section><!-- /.content -->
  </div><!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Version</b> 0.4.0
    </div>
    <strong>&copy; 2016 <a href="https://sikapiten.com">Kapiten</a>.</strong>.
  </footer>

  <!-- Control Sidebar -->
  <%= render 'layouts/aside_control' %>
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div><!-- ./wrapper -->