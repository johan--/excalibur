<%= link_to user_omniauth_authorize_path(:linkedin), class: "btn btn-block btn-social btn-linkedin btn-flat" do %>
  <% if defined?(login) %>
  	<i class="fa fa-linkedin"></i> Sign in via Linkedin
  <% else %>
  	<i class="fa fa-linkedin"></i> Sign up via Linkedin
  <% end %>
<% end %> 
<%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-social btn-facebook btn-flat" do %>
  <% if defined?(login) %>
  	<i class="fa fa-facebook"></i> Sign in via Facebook
  <% else %>
  	<i class="fa fa-facebook"></i> Sign up via Facebook
  <% end %>
<% end %>
<% if defined?(google) %>
	<%= link_to user_omniauth_authorize_path(:google_oauth2), class: "btn btn-block btn-social btn-google btn-flat" do %>
	  <i class="fa fa-google-plus"></i> Sign in via Google+
	<% end %>
<% end %>