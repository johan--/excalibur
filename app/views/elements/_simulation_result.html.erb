<!-- top tiles -->
<h3 class="media-heading centered"><%= "Hasil Simulasi" %></h3><hr>
<div class="tile_count ">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 tile_stats_count">
    <div class="left"></div>
    <div class="right">
      <span class="count_top"> Penambahan Porsi Kepemilikan</span>
      <div class="count"><p><%= @simulation.annual_share_purchase %> saham</p></div>
      <span class="count_bottom">
        +<%= ownership_increase_rate(@simulation) %> kepemilikan per tahun
      </span>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 tile_stats_count">
    <div class="left"></div>
    <div class="right">
      <span class="count_top"> Biaya Pemakaian Tahunan</span>
      <div class="count"><p><%= idr_money(@simulation.mean_rental_spending_annually) %></p></div>
      <span class="count_bottom primary"><%= comparison_to_normal_rent @simulation %> lebih murah dari biaya sewa normal</span>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 tile_stats_count">
    <div class="left"></div>
    <div class="right">
      <span class="count_top"> Akusisi Tahunan</span>
      <div class="count"><p><%= idr_money @simulation.mean_acquisition_annually %></p></div>
      <span class="count_bottom primary">atau <%= idr_money @simulation.mean_acquisition_monthly %> per bulannya (tidak wajib)</span>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 tile_stats_count">
    <div class="left"></div>
    <div class="right">
      <span class="count_top"> Total Pengeluaran</span>
      <div class="count strong"><p><%= idr_money @results[:total] %></p>
      </div>
      <span class="count_bottom">+<%= idr_money @simulation.initial_outlay %> sebagai modal awal</span>      
    </div>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <small class="grey centered">Hasil simulasi ini bukan hasil yang pasti karena Kapiten menentukan tingkat ROI berbeda-beda untuk tiap pengajuan.</small>
  </div>

</div>
<!-- /top tiles -->