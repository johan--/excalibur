<div class="post-box" id="post-<%= post.id %>">
  <% if post.meta_image.present? %>
	<% if request.variant.include? :phone %>
	  <%= cl_image_tag(post.meta_image, { :width => 300, :height => 150, :crop => :scale } ) %>
	<% else %>
	  <%= cl_image_tag(post.meta_image, { :width => 750, :height => 350, :crop => :scale }) %>
	<% end %>
  <% elsif post.header.present? %>
	<% if request.variant.include? :phone %>
	  <%= cl_image_tag(post.header, cly_sm_header_options) %>
	<% else %>
	  <%= cl_image_tag(post.header, cly_lg_header_options) %>
	<% end %>
  <% end %>
  
  <% if defined?(admin_list) && admin_list %>
	<%= link_to admin_post_path(post.slug) do %>
	  <h3 class="ctitle">
	  	<%= post.title %>
	  	<small><%= post.topic %> <%= link_to " | Edit", edit_admin_post_path(post) %></small>
	  </h3>
  	<% end %>
  <% else %>
  	<%= link_to blog_post_url(post.slug) do %>
	  <h3 class="ctitle">
	  	<%= post.title %>
	  	<small><%= post.topic %></small>
	  </h3>
  	<% end %>  	
  <% end %>

	<p><csmall><%= inline_svg "0084-calendar.svg", class: 'small-icons asphalt' %>&nbsp;&nbsp;<%= post.updated_at.strftime("%Y, %B %-d") %></csmall> | <csmall2>Oleh: <%= post.user.name %></csmall2></p>
  
  <% if defined?(multiple) && multiple %>
	<div class="post-truncate">
	  <%= sanitize truncate(post.content_html, length: 200, escape: false )%>
	</div>
	<p><%= link_to "Baca lebih lanjut", blog_post_path(post.slug) %></p>
	<div class="spacing"></div>
  <% else %>
	<div class="post-content no-select">
	  <%= post.content_html.html_safe %>
	</div>
	<hr>
	<h6>SHARE Via Media Sosial:</h6>
	<p class="share">
		<%= social_share_button_tag(post.title) %>
	</p>	
  <% end %>

  <div class="post-footer">
  	<p>
  	  <%= inline_svg "0055-price-tags.svg", class: 'small-icons asphalt' %> Kata Kunci: 
  	  <% unless post.tags.nil? %>
	  	<% post.tags.each do |tag| %>
	  	  <%= link_to blog_find_posts_path(tag: tag) do %>
	  	  	<span class="badge badge-info"><%= tag %></span>
	  	  <% end %>
	  	<% end %>
	  <% end %>
  	</p>
  </div>

  <% unless defined?(multiple) && multiple %>
  	<div id="disqus_thread"></div>	
  <% end %>

</div>