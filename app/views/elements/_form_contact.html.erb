<%= form_tag email_confirmation_path, method: 'post', html: {role: "form"} do %>

<div class="form-group">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= text_field_tag :name, '', placeholder: "Nama kamu", class: "form-control", required: true %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= text_field_tag :email, '', placeholder: "Alamat email kamu", class: "form-control", required: true %>
    </div>        
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-xs-12">
      <%= text_area_tag :message, '', placeholder: "Isi pesan", rows: 10, class: "form-control", required: true %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 padded">
    <%= submit_tag 'Kirim', class: 'btn btn-md btn-success' %>
  </div>
</div>
<% end %>