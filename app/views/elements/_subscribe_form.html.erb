<div class="col-md-12" id="subcribe-prompt">
	<p><%= t "landing.subscribe_prompt" %></p>
		<%= form_tag subscribe_path, method: 'post', html: {role: "form"} do %>
		  <div class="input-group">
		    <%= text_field_tag :email, '', placeholder: t("forms.hints.subscribe"), class: "form-control" %>
		    <%= hidden_field_tag :category, @category, readonly: true %>
		    <span class="input-group-btn">
		    	<%= submit_tag t("landing.subscribe_button"), class: "btn btn-kapiten btn-primary hidden-xs" %>
		    	<%= submit_tag t("landing.subscribe_button"), class: "btn btn-kapiten btn-xs btn-primary visible-xs" %>
		    </span>
		  </div>
		<% end %> 		

</div>	 