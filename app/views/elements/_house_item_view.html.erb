<div class="wp-block-item property-list">
  <div class="body">
    <div class="wp-block-img">
      <%= link_to house_path(house) do %>
          <%= render_house_display(house, '') %>
      <% end %>
    </div>
    <div class="wp-block-content">
      <h5><%= house.address %>  <small><%= house.city %></small></h5>
      <small class="lggrey">
    	  Pendaftaran: <strong><%= house.form_step %></strong> <sup><strong>.</strong></sup> Status: <strong><%= house.state %></strong>
      </small> <br>
      <small>
         <%= sale_label(house) %> <%= rent_label(house) %> <%= vacant_label(house) %>
      </small><br>
      <span class="pull-left">
      </span>
      <span class="pull-right coral">
          <strong><%= idr_money(house.price.to_i) %></strong>
      </span>
    </div>
  </div>
  <footer class="bg-body-light">
      <ul class="post-links">
        <li><%= link_to "Lihat", '#' %></li>

          <li><%= link_to "Kelola", '#', class: 'coral' %></li>

          <li><a href="#"><span class="text-danger"><i class="fa fa-heart"></i> Danai</span></a></li>
      </ul>
  </footer>  
</div>