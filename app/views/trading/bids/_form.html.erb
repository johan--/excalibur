<%= simple_form_for([@tender, @bid], html: { class: 'form-vertical' }, wrapper: :vertical_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :volume, as: :integer, input_html: { min: '10', max: '1000', step: '1', value: @volume }, label: "Jumlah Saham", required: true, hint: "Maksimal = 1000 saham  |  Harga 1 saham = #{idr_money(@tender.price)}" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Kirim", class: "btn btn-md btn-primary", id: 'bid-form-button' %>
  </div>
<% end %>