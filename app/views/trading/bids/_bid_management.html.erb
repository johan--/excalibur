<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
  </button>
  <h4 class="modal-title" id="myModalLabel"><%= heading %></h4>
</div>

<div class="modal-body">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
      <h3 class="media-heading centered">Jumlah Tawaran</h3>
      <p class="centered">Ini akan mengubah tawaranmu</p>
      <%= render 'form' %>
    </div>
    <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 danger-zone">
      <h3 class="media-heading centered">Penarikan Tawaran</h3>
      <p class="centered">Ini akan menghapus tawaranmu</p>
      <div class="col-sm-6 col-sm-offset-3">
        <%= link_to "Tarik Tawaran", tender_bid_path(@tender, @bid), :method => :delete, :confirm => 'Yakin mau menarik pesanan?', class: 'btn btn-danger btn-md' %>
    </div>
  </div>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Tutup</button>
</div>

<style type="text/css">
  .danger-zone {
    margin-top: 30px; margin-bottom: 15px; padding: 25px;
    border: 1px solid red;
  }
  .danger-zone .btn {
    text-align: center; margin-top: 15px;
  }
</style>