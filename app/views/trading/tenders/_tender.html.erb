
<%= link_to tender_path(tender) do %>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 no-padding product-chooser">
    <div class="product-chooser-item card">
      <%= render_tender_thumb(tender, "img-rounded col-xs-5 col-sm-4 col-md-12 ") %>
      <div class="col-xs-7 col-sm-8 col-md-12 col-lg-12">
        <h5 class="widget-user-username goleft">
          #<%= tender.ticker %> 
          <% if tender.try(:access_granted?, current_user) %>
            <%= link_to edit_tender_path(tender), class: 'edit-proposal' do %>
              <%= embedded_svg('spark-10-pencil.svg', class: 'svg-icon pull-right') %>
            <% end %>   
          <% end %>
        </h5>
        <p class="widget-user-desc goleft"><i class="fa fa-user pull-left"></i><strong> <%= link_to tender.starter.name, user_path(tender.starter) %></strong></p>
        <span class="description">
            <ul class="list-group list-group-flush text-center">
              <li class="list-group-item"><i class="icon-ok text-danger"></i> <%= tender.category %> @ <%= idr_concat(tender.price, 1000) %>rb/unit</li>
              <li class="list-group-item"><i class="icon-ok text-danger"></i> target: <strong> <%= idr_money(tender.target) %></strong></li>
            </ul>          
        </span>

      </div>
      <div class="col-xs-12 progress tender-progress no-padding" style="    border-radius: 4px;">
        <%= render_progress_bar(tender.progress.to_i) %>
      </div>
      <div class="clear"></div>
    </div>
  </div>
<% end %>

<style type="text/css">
div.clear
{
    clear: both;
}
  
</style>