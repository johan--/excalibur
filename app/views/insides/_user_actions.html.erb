<section class="intro action-section ">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      
      <% unless current_user? user %>      
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 centered">
          <div id="like-form">
            <% if user.liked_by? current_user %>
              <%= render partial: 'users/unlike_button', locals: { user: user } %>
            <% else %>
              <%= render partial: 'users/like_button', locals: { user: user } %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-xs-6 col-sm-4 col-sm-offset-2 centered">
            <%= link_to "Isi profil", edit_user_path(user), class: "btn btn-success btn-block" %>
          </div><!-- /.cols -->
          <div class="col-xs-6 col-sm-4 centered">
            <%= link_to "Unggah berkas", edit_user_path(user, upload_document: true), class: "btn btn-info btn-block" %>
          </div><!-- /.cols -->
        </div>
      <% end %>
    </div>     
  </div>
</section>