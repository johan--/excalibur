<% meta title: "Home" %>

<div class="home" style="">
  <h1 class="primary">Markas</h1><hr class="light">

  <div class="row" id="home-view">
    <div class="col-md-10 col-md-offset-1 right-display">
      <ul class="nav nav-tabs list-group list-group-horizontal centered">
        <li class="list-group-item active">
          <a href="#tab_default_1" data-toggle="tab">Investasi</a>
        </li>
        <li class="list-group-item">
          <a href="#tab_default_2" data-toggle="tab">Pengajuan</a>
        </li>        
      </ul>
      <div class="row">
        <div class="tab-content">
          <div class="tab-pane active" id="tab_default_1">
            <% if @bids.present? %>
              <div class="item">
                <%= render partial: 'bids/bid', collection: @bids  %>
              </div>
              <div class="row" id="prompts">
                <div class="col-md-8 col-sm-6 col-xs-3"></div>
                <div class="col-md-4 col-sm-6 col-xs-9">
                  <%= render_double_button('search', 'Pilih', 'Investasi', marketplace_path, true)  %>
                </div>
              </div>
            <% else %>

            <% end %>
          </div>
          <div class="tab-pane" id="tab_default_2">
            <div class="item">
              <div class="row">
                <div class="col-md-5">
                  <%= render partial: 'tenders/tenders', locals: {tenders: @tenders}  %>
                </div>
                <div class="col-md-7">
                  <% if @documents.present? %>
                    <% @groups.each do |category, documents| %>
                      <h5 class="primary"><%= category.titleize %></h5><hr>
                      <div class="row">
                        <div class="col-xs-12">
                          <% docs_per_category(category).each do |doc| %>
                            <span class="label label-primary" style="margin-right: 5px;">
                              <%= doc %>  <%= document_checklist(doc) %>
                            </span>
                          <% end %>
                        </div>
                        <% documents.each do |document| %>
                          <div class="col-xs-6 col-sm-4">
                            <%= render partial: "documents/document", locals: { document: document, thumbnail: true } %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  <% else %>
                    <%= render partial: 'elements/blankslate', locals: { heading: "Belum Ada Dokumen", explanation: "Tingkatkan kredibilitas dan kelayakan kamu dengan mengunggah dokumen-dokumen yang relevan terhadap kelayakan kamu sebagai klien", anchor: "Unggah Dokumen", destination: new_document_path } %>
                  <% end %>                  
                </div>
              </div>
            </div>
            <div class="col-md-8 col-sm-6 col-xs-3"></div>
            <div class="col-md-4 col-sm-6 col-xs-9">
              <%= render_double_button('lightbulb-o', 'Ajukan', 'Fundraising', choose_product_path, true) unless current_user.has_proposals? %>
            </div>            
          </div>
        </div>
      </div>      
    </div>
  </div>
</div>