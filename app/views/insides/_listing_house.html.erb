<h4 class="lggrey centered">Rumah yang kamu daftarkan</h4><hr>
<% unless current_user.has_houses? %>
  <div class="row">
    <div class="col-xs-12">
      <% @houses.each do |house| %>
        <%= render partial: "houses/house", locals: {house: house} %>
      <% end %>
      <div class="blankslate long">
        <h4><%= "Daftarkan Rumah" %></h4>
        <%= link_to houses_path(build: 'true'), method: :post do %>
          <h1><i class="ion ion-android-attach"></i></h1>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
<div class="card">
  <div class="blankslate">
    <div class="spacious">
      <h5><%= "Belum ada rumah yang kamu daftarkan" %></h5>
      <h3><i class="ion ion-android-home"></i></h3>
      <%= link_to "Daftarkan Rumah", houses_path(build: 'true'), method: :post, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>