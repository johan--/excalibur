<% if current_user.has_proposals? %>
  <div class="col-md-12">
    <div class="row">
      <div class="col-xs-4">
        <div class="blankslate long">
          <h4><%= "Tentukan Modal" %></h4>
          <%= link_to edit_tender_path(@tender), remote: true do %>
            <h1><i class="ion ion-cash"></i></h1>
          <% end %>
        </div>          
      </div>      
      <div class="col-xs-4">
        <div class="blankslate long">
          <h4><%= "Isi Data Diri" %></h4>
          <%= link_to edit_user_path(current_user), remote: true do %>
            <h1><i class="ion ion-person"></i></h1>
          <% end %>
        </div>          
      </div>
      <div class="col-xs-4">
        <div class="blankslate long">
          <h4><%= "Unggah Dokumen" %></h4>
          <%= link_to new_document_path do %>
            <h1><i class="ion ion-android-attach"></i></h1>
          <% end %>
        </div>          
      </div>
    </div>
  </div>
  <div class="spacing"></div>
  <div class="col-md-12 col-sm-6 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h4>Pengajuan Pendanaan <small></small></h4>
        <ul class="nav navbar-right panel_toolbox">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-bars"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to edit_tender_path(@tender) do %> 
                  <i class="fa fa-pencil"></i> Edit
                <% end %>                  
              </li>                
              <li>
                <%= link_to tender_path(@tender), method: :delete, data: {confirm: 'Kamu yakin mau melanjutkan?', object: 'Penghapusan Proposal'} do %>
                  <i class="fa fa-trash"></i> Hapus
                <% end %>                  
              </li>
            </ul>
          </li> 
          <li>
          </li>
        </ul>          
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">

          <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
            <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Proposal</a>
            </li>
            <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Pemohon</a>
            </li>
          </ul>

          <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
              <%= render partial: 'tenders/tender_info', locals: {tender: @tender}  %>
            </div>
        
            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
              <%= render partial: 'users/user_info', locals: {user: current_user}  %>
              <%= render 'documents/doc_list' %>
            </div>
        
          </div>
        </div>

      </div>
    </div>
  </div>
<% else %>

  <div class="blankslate backgroundless">
    <div class="spacious">
      <h4><%= "Ingin mengajukan pendanaan?" %></h4>
      <small>Pilih rumah yang sudah didaftarkan di Kapiten atau daftarkan rumah yang kamu inginkan terlebih dahulu</small>
      <h1><i class="ion ion-compose"></i></h1>
      <div class="btn-group mb" role="group" aria-label="...">
        <%= link_to "Pilih Rumah", choose_path, remote: true, class: "btn btn-inverse" %>
        <%= link_to "Daftarkan Rumah", houses_path(build: 'true'), method: :post, class: "btn btn-inverse" %>
      </div>
    </div>
  </div>

<% end %>
