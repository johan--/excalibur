<div class="item">
  <% if current_user.has_proposals? %>
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-xs-4">
            <div class="blankslate long">
              <h4><%= "Tentukan Modal" %></h4>
              <%= link_to edit_tender_path(@tender), remote: true do %>
                <h1><i class="glyphicon glyphicon-piggy-bank"></i></h1>
              <% end %>
            </div>          
          </div>      
          <div class="col-xs-4">
            <div class="blankslate long">
              <h4><%= "Isi Data Diri" %></h4>
              <%= link_to edit_user_path(current_user), remote: true do %>
                <h1><i class="ion ion-person"></i></h1>
              <% end %>
            </div>          
          </div>
          <div class="col-xs-4">
            <div class="blankslate long">
              <h4><%= "Unggah Dokumen" %></h4>
              <%= link_to new_document_path do %>
                <h1><i class="ion ion-android-attach"></i></h1>
              <% end %>
            </div>          
          </div>
        </div>
      </div>
      <div class="spacing"></div>
      <div class="col-md-12 col-sm-6 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h4><i class="fa fa-bars"></i> Pengajuan Pendanaan <small>Panel</small></h4>
<!--             <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul> -->
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="" role="tabpanel" data-example-id="togglable-tabs">

              <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Proposal</a>
                </li>
                <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Pemohon</a>
                </li>
              </ul>

              <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
                  <%= render partial: 'tenders/tender_info', locals: {tender: @tender}  %>
                </div>
            
                <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
                  <%= render partial: 'users/user_info', locals: {user: current_user}  %>
                  <%= render 'documents/doc_list' %>
                </div>
            
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="blankslate">
      <div class="spacious">
        <h4><%= "Ingin membeli rumah?" %></h4>
        <h1><i class="ion ion-android-home"></i></h1>
        <%= link_to "Ajukan proposal", new_tender_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>