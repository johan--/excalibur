    <br>
    <div class="col-xs-12 user-menu">
        <div class="user-menu-content active">
            <div class="col-md-3 centered" id="left-view">
                <br>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <i class="fa fa-cloud-upload fa-4x"></i>
                    </div>
                    <div class="col-md-12 col-xs-5">
                        <%= render_double_button('lightbulb-o', 'Beli Dengan', 'Pendanaan', new_tender_path(user_id: current_user, intent: 'fundraising', asset: "Stock", asset_id: @house.initial_stock, akad: "musharaka"), true) %>
                    </div>
                    <div class="col-md-12 col-xs-2" style="margin-top: 10px; margin-bottom: 10px;">
                        ATAU
                    </div>
                    <div class="col-md-12 col-xs-5">
                        <%= render_double_button('search', 'Pilih Untuk', 'Menyewa', '', true) %>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
              <div id="home-view">
                <div class="right-display">
                  <div class="item">
                    <div class="wp-block-footer style2 mt-15">
                        <ul class="aux-info">
                            <li><i class="fa fa-building"></i><%= @house.property_size %> m2</li>
                            <li><i class="fa fa-user"></i> <%= @house.bedrooms %> Bedrooms</li>
                            <li><i class="fa fa-tint"></i> <%= @house.bathrooms %> Bathrooms</li>
                            <li><i class="fa fa-car"></i> <%= @house.garages %> Garages</li>
                        </ul>
                    </div>
                  </div>
                  <div class="item">
                    <h5>Info</h5>
                    <%= render 'houses/house_details', house: @house %>
                    <p><%= @house.description %></p>
                  </div>
                  <div class="item">
                    <!-- <h5>Foto</h5> -->
                    <% @photos.each do |photo| %>
                        <%= render 'houses/house_photo', photo: photo %>
                    <% end %>

                    <%= link_to "Unggah Foto", upload_photo_admin_house_path(@house), class: "btn btn-round-lg btn-primary" if current_user.admin? %>
                  </div>
                </div>
              </div>
              <div class="side-view" id="marketplace" style="display: none;">
              </div>
              <div class="side-view" id="houses" style="display: none;">
              </div>                          
            </div>
        </div>
    </div>
</div>