<%= render 'header' %>
<div class="estate">    
  <div class="row">
    <div class="col-xs-12">
    	<div id='house-photos' class="boxed">
      	<% if @photos.empty? %>
          <div class="blankslate">
              <div class="spacious">
                  <h3><%= 'Belum Ada Foto' %></h3>
                  <p><%= 'Foto-foto untuk rumah ini masih di proses, mohon tunggu' %></p>
              </div>
          </div>
      	<% else %>          
          <% @photos.each do |photo| %>
            <div class="col-md-3 col-sm-4 col-xs-6 photo-box">
              <%= render partial: 'house_photo', locals: {photo: photo} %>
            </div>
          <% end %>
          <div class="col-md-3 col-sm-4 col-xs-6">
            <div class="blankslate long">
              <%= link_to '#', data: { toggle: :modal, target: '#upload_photo'} do %>
                <h4><i class="ion ion-android-attach"></i><br> Tambah Foto</h4>
              <% end %>
            </div>            
          </div>
      	<% end %>
      </div>
    </div><hr>

    <div class="col-xs-12">
      
      <div class="tab-body">
      	<div class="col-md-7 col-sm-8">
        	<% if @house.description.present? %>
            <div class="section-title-wr">
              <h5 class="section-title left">Deskripsi Properti</h5>
            </div>
            <p><%= @house.description %></p>
          <% end %>

          <div class="section-title-wr">
            <h5 class="section-title left">Rangkuman</h5>
          </div>
          <%= render partial: 'house_details', locals: {house: @house } %>
        </div>
        <div class="col-md-4"></div>

      </div>
        
    </div>
  </div>
</div>
<%= render 'upload_photo' %>