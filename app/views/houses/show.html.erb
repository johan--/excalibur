
<div class="user-menu-container square">
    <div class="user-details">
        <div class="row white-background white" style="margin-left: 0px;">
            <div class="col-md-8 col-xs-4">
                <div class="user-pad">
                    <h3 class="black"><%= @house.ticker %></h3>
                    <h4 class="white"><i class="fa fa-check-circle-o"></i> <%= @house.address %></h4>
<!--                     <h4 class="white"><i class="fa fa-twitter"></i> <%= @house.address %></h4> -->
                    <%= link_fa_to('pencil', 'Profil', edit_admin_house_url(@house, subdomain: '')) if current_user.admin? %>
                </div>
            </div>
            <div class="col-md-4 col-xs-6">
                <div class="user-image">
                    <% if @house.avatar.blank? %>
                        <img src="http://res.cloudinary.com/instilla/image/upload/s--iftDNybA--/c_scale,h_500,w_700/v1452508512/asset/2000px-House_Silhouette.png" class="img-responsive" alt="">
                    <% else %>
                        <%= cl_image_tag(@house.avatar, house_photo_options('zoom')) %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="row overview">
            <div class="col-xs-4 user-pad text-center">
                <h3>HARGA</h3>
                <h4><%= idr_concat(@house.price) %> jt</h4>
            </div>
            <div class="col-xs-4 user-pad text-center">
                <h3>FOR SALE</h3>
                <h4><%= @house.for_sale %></h4>
            </div>
            <div class="col-xs-4 user-pad text-center">
                <h3>FOR RENT</h3>
                <h4><%= @house.for_rent %></h4>
            </div>
        </div>
    </div>
