<div id="direct_upload" class="centered">
  <div class="form_line">
    <%= f.label "Status:" %><br>
    <%= f.submit "0 % Uploading", class: "btn btn-coral", disabled: true %>
    <div class="spacing"></div>
    <div class="row">
      <div class="form_controls col-sm-6 col-sm-offset-3">
       <%= f.attachinary_file_field :photos %>
      </div>            
    </div>
  </div>

    <div class="form_line">
      <div class="form_controls">
      	<span class="status"></span>
        <div class="preview"></div>
        <div class="spacing"></div>
        <button class='btn btn-success centered'>
          <i class='fa fa-plus-square'></i> Kirim
        </button>              
      </div>
    </div>
</div>

<script>
  $(document).ready(function() {
    $('.attachinary-input').attachinary({
      dataType: 'json',
      done: function (e, data) {
        data.context.text('Upload finished.');
      }      
    })
  });
</script>      