<% meta title: "Pengajuan Proposal Pendanaan" %>

<h3 class="centered">Proposal Pendanaan</h3>

<div class="col-md-2"></div>
<div class="col-md-4 col-sm-6">
  <%= render partial: 'houses/house', locals: { house: @house } %>
</div>

<div class="col-md-4 col-sm-6">
  <center>
    <%= simple_form_for([@house, @tender], {html: { class: 'form-vertical' }, wrapper: :vertical_form }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= render 'trading/tenders/fundraising_fields', f: f %>
    </div>


    <div class="form-actions">
      <%= button_tag "Ajukan", class: "btn btn-lg btn-primary btn-round-lg", data: {disable_with: "<i class='fa fa-spinner fa-pulse'>
      </i> Sedang dibuat..."}  %>
    </div>
  <% end %>

  </center>
</div>
<div class="col-md-2"></div>