
<div class="thumbnail house-listing card">
    <div class="overlay-wrapper">
        <%= render_lg_house_display(house, 'img-responsive') %>
        <% unless @disable_link %>
            <span class="overlay">
                <%= link_to house_path(house) do %>
                  <%= embedded_svg('spark-10-zoom.svg', class: 'svg-white-icon') %> 
                  <h5> Lihat</h5>
                <% end %>
                <% if house.try(:access_granted?, current_user) %>
                    <%= link_to edit_url_for_house(house) do %>
                      <%= embedded_svg('spark-10-pencil.svg', class: 'svg-white-icon') %> 
                      <h5> Edit</h5>
                    <% end %>
                <% end %>            
                <%= link_to '#' do %>
                  <%= embedded_svg('spark-10-writing.svg', class: 'svg-white-icon') %> 
                  <h5> Ajukan</h5>
                <% end %>
            </span>
        <% end %>
    </div>
    <div class="caption">
        <div class="row prose extra-bottom-margin">
            <div class="col-sm-8 col-xs-8">
                <div class="top-desc address">
                    <%= link_to_unless @disable_link, house.address %> <span class="city small"><%= house.province %></span> 
                </div>
            </div>
            <div class="col-sm-4 col-xs-4">
                <div class="top-desc coral pull-right"><strong><%= "Rp " + idr_concat(house.price, 1000000) + " jt" %></strong></div> 
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 top-desc">
                <p>
                    <span class="lggrey"><%= house.bedrooms %> Kamar Tidur <sup>.</sup> 
                    <%= house.bathrooms %> Kamar Mandi <sup>.</sup> <%= house.lot_size %>m<sup>2</sup></span>
                </p> 
            </div>  
        </div>
        <div class="row">
            <div class="col-xs-12">
                <p><%= sale_label(house) %> <%= rent_label(house) %> <%= vacant_label(house) %></p>
            </div>
        </div>        
    </div>
</div>
