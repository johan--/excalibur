<% title("Pencarian Artikel") %>

<h3>Hasil Pencarian Artikel</h3>
<div>
<% @posts.each do |post| %>
  <%= render partial: 'elements/post', locals: { post: post, multiple: true } %>
  <div class="spacing"></div>
<% end %>
</div>

<div class="pagination-control text-center">
  <%= paginate @posts %>
</div>	