%>


<section id="home" name="home"></section>
<% if is_opera_mini? %>
<div id="opera-mini-wrap">
  <div class="container">
    <div class="row centered">
      <%= render 'callout' %>      
        <br>      
    </div>
  </div>
</div>
<% else %>
<div class="landing-header" id="funderwrap">
    <div class="container">
      <div class="row centered">
        <%= render 'callout' %>
        <br>
      </div>
    </div> <!--/ .container -->
</div><!--/ #headerwrap --> 
